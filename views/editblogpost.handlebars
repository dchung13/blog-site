<h1 class="title has-text-centered">Edit This Blog Post</h1>

<form id="edit-blogpost-form">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>

    <label for="content">Content:</label>
    <textarea id="content" name="content" required></textarea>

    <button type="submit" class="button is-primary" data-type-id="{{blogpost.id}}">Edit Story</button>
</form>
<script src="../public/js/editblogpost.js"></script>