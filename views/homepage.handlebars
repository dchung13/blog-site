{{#extend "layouts/main.handlebars"}}
{{#content "body"}}
        {{#each blogposts as |blogpost|}}
        <div class="row align-center mb-5">
            <div class="col-md-12">
                <h2><a href="/blogPost/{{id}}">{{title}}</a></h2>
                <h6>{{date}}</h6>
            </div>
            <div>
                <h4>{{user.name}}</h4>
            </div>
        </div>
        {{/each}}
{{/content}}
{{/extend}}