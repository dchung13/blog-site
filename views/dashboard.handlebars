<h1 class="title has-text-centered">Your Bookshelf</h1>

{{#each blogposts as |blogpost| }}
<div class="row align-center mb-5">
    <div class="col-md-12">
        <h2>{{title}}</h2>
        <h6>{{date}}</h6>
    </div>
    <hr />
    <div class="row align-center mb-5">
        <div class="col-md-12">
            <p>{{content}}</p>
        </div>
    </div>
</div>
{{/each}}

<div>
    <a href="/createblogpost.js">+ Create a New Blog Post</a>
</div>